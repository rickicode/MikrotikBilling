<!DOCTYPE html>
<html lang="id" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Halaman Tidak Ditemukan</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'bounce-slow': 'bounce 2s ease-in-out infinite',
                        'pulse-slow': 'pulse 2s ease-in-out infinite',
                        'slide-up': 'slideUp 0.8s ease-out',
                        'particle-float': 'particleFloat 8s linear infinite',
                    }
                }
            }
        }
    </script>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 flex items-center justify-center overflow-hidden relative">

    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-full opacity-30">
            <div class="absolute top-20 left-20 w-80 h-80 bg-purple-500 rounded-full filter blur-3xl animate-pulse"></div>
            <div class="absolute bottom-20 right-20 w-80 h-80 bg-blue-500 rounded-full filter blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-indigo-500 rounded-full filter blur-3xl animate-pulse" style="animation-delay: 4s;"></div>
        </div>
    </div>

    <!-- Floating Shapes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-20 w-20 h-20 bg-white/10 rounded-full animate-float"></div>
        <div class="absolute top-1/3 right-32 w-32 h-32 bg-white/5 rounded-full animate-float" style="animation-delay: 2s;"></div>
        <div class="absolute bottom-1/4 left-1/4 w-16 h-16 bg-white/10 rounded-full animate-float" style="animation-delay: 4s;"></div>
        <div class="absolute bottom-20 right-20 w-24 w-24 bg-white/5 rounded-full animate-float" style="animation-delay: 1s;"></div>
    </div>

    <!-- Particles -->
    <div id="particles" class="absolute inset-0 pointer-events-none"></div>

    <!-- Error Container -->
    <div class="relative z-10 bg-slate-800/90 backdrop-blur-xl border border-slate-700 rounded-3xl p-12 max-w-2xl w-full mx-4 shadow-2xl animate-slide-up">

        <!-- Error Icon -->
        <div class="flex justify-center mb-6">
            <div class="text-6xl text-purple-400 animate-bounce-slow">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
        </div>

        <!-- Error Code -->
        <div class="text-center mb-6">
            <div class="text-8xl font-black bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent animate-pulse-slow">
                404
            </div>
        </div>

        <!-- Error Title -->
        <h1 class="text-4xl font-bold text-white text-center mb-4">
            Halaman Tidak Ditemukan
        </h1>

        <!-- Error Description -->
        <p class="text-lg text-slate-300 text-center mb-8 leading-relaxed">
            Maaf, halaman yang Anda cari tidak dapat ditemukan.<br>
            Mungkin telah dihapus, dipindahkan, atau URL yang Anda masukkan salah.
        </p>

        <!-- URL Display -->
        <div class="bg-slate-900/50 border border-slate-600 rounded-xl p-4 mb-8">
            <p class="text-sm text-slate-400 mb-2">URL yang diminta:</p>
            <code class="text-slate-300 font-mono text-sm break-all"><%= url %></code>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/login" class="inline-flex items-center justify-center px-8 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-purple-500/25">
                <i class="fas fa-home mr-3"></i>
                Kembali ke Halaman Login
            </a>
            <button onclick="history.back()" class="inline-flex items-center justify-center px-8 py-3 bg-slate-700 hover:bg-slate-600 text-white font-semibold rounded-xl transition-all duration-300">
                <i class="fas fa-arrow-left mr-3"></i>
                Kembali
            </button>
        </div>

        <!-- Additional Info -->
        <div class="mt-12 pt-8 border-t border-slate-700">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 text-center">
                <div class="bg-slate-900/30 rounded-xl p-4">
                    <i class="fas fa-search text-2xl text-blue-400 mb-2"></i>
                    <p class="text-sm text-slate-400">Cari di menu navigasi</p>
                </div>
                <div class="bg-slate-900/30 rounded-xl p-4">
                    <i class="fas fa-keyboard text-2xl text-green-400 mb-2"></i>
                    <p class="text-sm text-slate-400">Periksa typo pada URL</p>
                </div>
                <div class="bg-slate-900/30 rounded-xl p-4">
                    <i class="fas fa-headset text-2xl text-purple-400 mb-2"></i>
                    <p class="text-sm text-slate-400">Hubungi admin jika perlu</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Create floating particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 30;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'absolute w-1 h-1 bg-white/60 rounded-full';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 8 + 's';
                particle.style.animationDuration = (Math.random() * 4 + 6) + 's';
                particle.style.animation = 'particleFloat 8s linear infinite';
                particlesContainer.appendChild(particle);
            }
        }

        // Initialize particles
        document.addEventListener('DOMContentLoaded', createParticles);

        // Add custom animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes float {
                0%, 100% { transform: translateY(0px) rotate(0deg); }
                50% { transform: translateY(-30px) rotate(180deg); }
            }

            @keyframes slideUp {
                from {
                    opacity: 0;
                    transform: translateY(50px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            @keyframes particleFloat {
                0% {
                    transform: translateY(100vh) rotate(0deg);
                    opacity: 1;
                }
                100% {
                    transform: translateY(-10px) rotate(360deg);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>