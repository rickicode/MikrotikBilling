<%- include('../partials/header', { title: 'PPPoE Users', currentUrl: '/pppoe' }) %>

<!-- Page Header -->
<div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">PPPoE Users</h1>
            <p class="text-slate-400">Kelola pengguna PPPoE dan monitoring koneksi aktif</p>
        </div>
        <div class="mt-4 sm:mt-0 flex gap-3">
            <button onclick="syncPPPoE()" class="inline-flex items-center px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded-lg transition-colors duration-200 border border-slate-600">
                <i class="fas fa-sync-alt mr-2"></i>
                Sync Mikrotik
            </button>
            <button onclick="exportPPPoE()" class="inline-flex items-center px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded-lg transition-colors duration-200 border border-slate-600">
                <i class="fas fa-download mr-2"></i>
                Export Data
            </button>
            <a href="/pppoe/create" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
                <i class="fas fa-plus mr-2"></i>
                Create PPPoE
            </a>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total PPPoE Users -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-purple-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <p class="text-slate-400 text-sm font-medium mb-1">Total PPPoE</p>
                <p class="text-3xl font-bold text-white counter" data-target="0" id="totalPPPoE">0</p>
            </div>
            <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-purple-500/10 rounded-xl flex items-center justify-center border border-purple-500/20">
                    <i class="fas fa-users text-purple-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-blue-400 flex items-center font-medium">
                <i class="fas fa-info-circle mr-1"></i>
                <span id="pppoeGrowth">+18%</span>
            </span>
            <span class="text-slate-500 ml-2">dari bulan lalu</span>
        </div>
    </div>

    <!-- Active PPPoE Users -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-green-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <p class="text-slate-400 text-sm font-medium mb-1">Aktif</p>
                <p class="text-3xl font-bold text-white counter" data-target="0" id="activePPPoE">0</p>
            </div>
            <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-green-500/10 rounded-xl flex items-center justify-center border border-green-500/20">
                    <i class="fas fa-check-circle text-green-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-green-400 flex items-center font-medium">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="activePercentage">72%</span>
            </span>
            <span class="text-slate-500 ml-2">dari total user</span>
        </div>
    </div>

    <!-- Online Users -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-blue-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <p class="text-slate-400 text-sm font-medium mb-1">Online</p>
                <p class="text-3xl font-bold text-white counter" data-target="0" id="onlinePPPoE">0</p>
            </div>
            <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-blue-500/10 rounded-xl flex items-center justify-center border border-blue-500/20">
                    <i class="fas fa-wifi text-blue-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-blue-400 flex items-center font-medium">
                <i class="fas fa-info-circle mr-1"></i>
                <span id="onlinePercentage">45%</span>
            </span>
            <span class="text-slate-500 ml-2">sedang terhubung</span>
        </div>
    </div>

    <!-- Expired Users -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-red-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <p class="text-slate-400 text-sm font-medium mb-1">Kadaluarsa</p>
                <p class="text-3xl font-bold text-white counter" data-target="0" id="expiredPPPoE">0</p>
            </div>
            <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-red-500/10 rounded-xl flex items-center justify-center border border-red-500/20">
                    <i class="fas fa-times-circle text-red-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-red-400 flex items-center font-medium">
                <i class="fas fa-exclamation-triangle mr-1"></i>
                <span id="expiredPercentage">8%</span>
            </span>
            <span class="text-slate-500 ml-2">perlu diperbarui</span>
        </div>
    </div>
</div>

<!-- Search and Filters -->
<div class="bg-slate-800 border border-slate-700 rounded-xl p-6 mb-6 shadow-lg">
    <form id="searchForm" class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <!-- Search Input -->
        <div class="md:col-span-2">
            <label class="block text-sm font-medium text-slate-300 mb-2">Cari PPPoE User</label>
            <div class="relative">
                <input
                    type="text"
                    id="searchInput"
                    placeholder="Username atau nama pelanggan..."
                    class="w-full h-10 pl-10 pr-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2"
                >
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-search text-slate-400"></i>
                </div>
            </div>
        </div>

        <!-- Profile Filter -->
        <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Profile</label>
            <select id="profileFilter" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                <option value="">Semua Profile</option>
                <% profiles.forEach(profile => { %>
                    <option value="<%= profile.id %>"><%= profile.name %></option>
                <% }); %>
            </select>
        </div>

        <!-- Status Filter -->
        <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Status</label>
            <select id="statusFilter" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                <option value="">Semua Status</option>
                <option value="active">Aktif</option>
                <option value="disabled">Nonaktif</option>
                <option value="expired">Kadaluarsa</option>
            </select>
        </div>

        <!-- Expiry Filter -->
        <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Kadaluarsa</label>
            <select id="expiryFilter" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                <option value="">Semua</option>
                <option value="today">Hari Ini</option>
                <option value="week">Minggu Ini</option>
                <option value="month">Bulan Ini</option>
                <option value="expired">Kadaluarsa</option>
            </select>
        </div>
    </form>

    <!-- Advanced Filters Toggle -->
    <div class="mt-4 flex items-center justify-between">
        <button type="button" onclick="toggleAdvancedFilters()" class="text-sm text-blue-400 hover:text-blue-300 transition-colors">
            <i class="fas fa-filter mr-1"></i>
            Filter Lanjutan
        </button>
        <button type="submit" form="searchForm" class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors duration-200">
            <i class="fas fa-funnel mr-2"></i>
            Terapkan Filter
        </button>
    </div>

    <!-- Advanced Filters Panel -->
    <div id="advancedFilters" class="hidden mt-4 pt-4 border-t border-slate-700">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Tanggal Pembuatan</label>
                <input type="date" id="createdDateFilter" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Harga Minimum</label>
                <input type="number" id="minPrice" placeholder="0" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Durasi</label>
                <select id="durationFilter" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                    <option value="">Semua Durasi</option>
                    <option value="7">7 hari</option>
                    <option value="14">14 hari</option>
                    <option value="30">30 hari</option>
                    <option value="60">60 hari</option>
                    <option value="90">90 hari</option>
                    <option value="180">6 bulan</option>
                    <option value="365">1 tahun</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Urutkan</label>
                <select id="sortBy" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                    <option value="created_at">Tanggal Dibuat</option>
                    <option value="username">Username</option>
                    <option value="expires_at">Tanggal Kadaluarsa</option>
                    <option value="customer_name">Nama Pelanggan</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- PPPoE Users Table -->
<div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden shadow-lg">
    <!-- Table Header -->
    <div class="px-6 py-4 border-b border-slate-700 bg-slate-900/30">
        <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-white">Daftar User PPPoE</h2>
            <div class="flex items-center gap-3">
                <div class="flex items-center">
                    <input type="checkbox" class="h-4 w-4 rounded border-slate-600 bg-slate-700 text-blue-600 focus:ring-blue-500 focus:ring-offset-slate-900" id="selectAll">
                    <label for="selectAll" class="ml-2 text-sm text-slate-300">Pilih Semua</label>
                </div>
                <select id="pageSize" class="h-9 px-3 text-sm bg-slate-700 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                <span class="text-sm text-slate-400">per halaman</span>
                <span class="text-sm text-slate-400">Menampilkan <span id="showingCount">0</span> user</span>
                <button onclick="refreshPPPoE()" class="p-2 text-slate-400 hover:text-white hover:bg-slate-700 rounded-lg transition-colors">
                    <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Table Content -->
    <div class="overflow-x-auto">
        <table class="w-full" id="pppoeTable">
            <thead class="bg-slate-900/50 border-b border-slate-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider w-12">
                        <input type="checkbox" class="h-4 w-4 rounded border-slate-600 bg-slate-700 text-blue-600 focus:ring-blue-500 focus:ring-offset-slate-900" id="selectAllHeader">
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Username</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Pelanggan</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Profile</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Online</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Dibuat</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Kadaluarsa</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-slate-300 uppercase tracking-wider">Aksi</th>
                </tr>
            </thead>
            <tbody id="pppoeTableBody" class="divide-y divide-slate-700">
                <tr>
                    <td colspan="9" class="px-6 py-8 text-center">
                        <div class="flex flex-col items-center space-y-3">
                            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-purple-600"></div>
                            <span class="text-slate-400">Memuat data PPPoE...</span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Table Footer -->
    <div class="px-6 py-4 border-t border-slate-700 bg-slate-900/30">
        <!-- Pagination -->
        <div class="pagination-container flex flex-col sm:flex-row items-center justify-between gap-4">
            <!-- Results info -->
            <div class="text-sm text-slate-400">
                Menampilkan <span id="startItem">0</span> hingga <span id="endItem">0</span> dari <span id="totalItems">0</span> hasil
            </div>

            <!-- Pagination controls -->
            <div class="flex items-center space-x-2">
                <ul class="pagination" id="paginationNav">
                    <!-- Pagination will be inserted here -->
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- PPPoE Detail Modal -->
<div id="pppoeDetailsModal" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-slate-800 border border-slate-700 rounded-xl max-w-4xl w-full max-h-[90vh] overflow-hidden">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-slate-700 flex items-center justify-between">
                <h3 class="text-xl font-semibold text-white">Detail PPPoE User</h3>
                <button onclick="closePPPoEModal()" class="text-slate-400 hover:text-white transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>

            <!-- Modal Content -->
            <div class="p-6 overflow-y-auto max-h-[calc(90vh-120px)]">
                <div id="pppoeDetailsContent">
                    <!-- PPPoE details will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Extend/Renew Modal -->
<div id="extendModal" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-slate-800 border border-slate-700 rounded-xl max-w-2xl w-full">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-slate-700">
                <h3 class="text-xl font-semibold text-white">Perpanjang PPPoE</h3>
            </div>

            <!-- Modal Body -->
            <div class="p-6">
                <form id="extendForm">
                    <input type="hidden" id="extendUserId">

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-2">Username</label>
                            <input type="text" id="extendUsername" readonly class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-2">Pelanggan</label>
                            <input type="text" id="extendCustomer" readonly class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white">
                        </div>
                    </div>

                    <div class="mt-4">
                        <label class="block text-sm font-medium text-slate-300 mb-2">Perpanjang Selama</label>
                        <select id="extendDuration" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                            <option value="7">7 hari</option>
                            <option value="14">14 hari</option>
                            <option value="30" selected>30 hari</option>
                            <option value="60">60 hari</option>
                            <option value="90">90 hari</option>
                            <option value="180">180 hari (6 bulan)</option>
                            <option value="365">365 hari (1 tahun)</option>
                        </select>
                    </div>

                    <div class="mt-4">
                        <label class="block text-sm font-medium text-slate-300 mb-2">Total Biaya</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <span class="text-slate-400">Rp</span>
                            </div>
                            <input type="text" id="extendTotal" readonly class="w-full h-10 pl-12 pr-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white">
                        </div>
                    </div>

                    <div class="mt-4">
                        <label class="block text-sm font-medium text-slate-300 mb-2">Metode Pembayaran</label>
                        <select id="extendPaymentMethod" class="w-full h-10 px-4 text-sm bg-slate-900 border border-slate-600 rounded-lg text-white focus:border-purple-500 focus:ring-purple-500 focus:outline-none focus:ring-2">
                            <option value="cash">Cash</option>
                            <option value="duitku">DuitKu</option>
                            <option value="credit">Hutang</option>
                        </select>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="px-6 py-4 border-t border-slate-700 flex justify-end space-x-3">
                <button onclick="closeExtendModal()" class="px-4 py-2 text-slate-300 hover:text-white hover:bg-slate-700 rounded-lg transition-colors">
                    Batal
                </button>
                <button onclick="confirmExtend()" class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors duration-200">
                    <i class="fas fa-check-circle mr-2"></i>
                    Perpanjang
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteConfirmModal" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-slate-800 border border-slate-700 rounded-xl max-w-md w-full">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-slate-700">
                <h3 class="text-xl font-semibold text-white">Konfirmasi Hapus</h3>
            </div>

            <!-- Modal Body -->
            <div class="p-6">
                <div class="mb-4">
                    <p class="text-slate-300 mb-2">Apakah Anda yakin ingin menghapus PPPoE user ini?</p>
                    <div class="bg-slate-900 border border-slate-600 rounded-lg p-3">
                        <p class="font-medium text-white" id="deletePPPoEUsername"></p>
                        <p class="text-sm text-slate-400" id="deletePPPoEDetails"></p>
                    </div>
                </div>

                <div class="bg-orange-500/10 border border-orange-500/20 rounded-lg p-4">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-triangle text-orange-400 mt-0.5 mr-3"></i>
                        <div>
                            <h4 class="font-medium text-orange-400 mb-1">Peringatan!</h4>
                            <p class="text-sm text-slate-400">Tindakan ini akan menghapus user dari Mikrotik dan database secara permanen.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="px-6 py-4 border-t border-slate-700 flex justify-end space-x-3">
                <button onclick="closeDeleteModal()" class="px-4 py-2 text-slate-300 hover:text-white hover:bg-slate-700 rounded-lg transition-colors">
                    Batal
                </button>
                <button onclick="confirmDelete()" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors">
                    <i class="fas fa-trash mr-2"></i>
                    Hapus
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div id="toastContainer" class="fixed top-4 right-4 z-50 space-y-2"></div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm flex items-center justify-center z-50 hidden">
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 flex items-center space-x-4 shadow-2xl">
        <div class="animate-spin rounded-full h-10 w-10 border-4 border-slate-600 border-t-purple-500"></div>
        <div>
            <span class="text-slate-200 font-medium">Memuat data...</span>
            <p class="text-slate-400 text-sm mt-1">Mohon tunggu sebentar</p>
        </div>
    </div>
</div>

<style>
/* Simple Action Buttons Styling */
.btn-action {
    @apply inline-flex items-center justify-center w-8 h-8 rounded transition-all duration-200;
}

.btn-view {
    @apply bg-blue-500/10 text-blue-400 hover:bg-blue-500/20;
}

.btn-toggle {
    @apply bg-slate-500/10 text-slate-400 hover:bg-slate-500/20;
}

.btn-extend {
    @apply bg-green-500/10 text-green-400 hover:bg-green-500/20;
}

.btn-enable {
    @apply bg-emerald-500/10 text-emerald-400 hover:bg-emerald-500/20;
}

.btn-disable {
    @apply bg-amber-500/10 text-amber-400 hover:bg-amber-500/20;
}

.btn-delete {
    @apply bg-red-500/10 text-red-400 hover:bg-red-500/20;
}

/* Table Row Hover */
.table-row-hover {
    @apply transition-all duration-200 hover:bg-slate-700/50;
