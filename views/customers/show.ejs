<%- include('../partials/header', { title: `Detail Pelanggan - ${customer.nama}`, currentUrl: `/customers/${customer.id}` }) %>

<div class="mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2"><%= customer.nama %></h1>
            <p class="text-slate-400 mb-0 flex flex-wrap items-center gap-4">
                <span class="flex items-center">
                    <i class="bi bi-person-badge mr-2"></i>
                    ID: #<%= customer.id %>
                </span>
                <span class="flex items-center">
                    <i class="bi bi-telephone mr-2"></i>
                    <%= customer.nomor_hp %>
                </span>
                <% if (customer.email) { %>
                    <span class="flex items-center">
                        <i class="bi bi-envelope mr-2"></i>
                        <%= customer.email %>
                    </span>
                <% } %>
            </p>
        </div>
        <div class="mt-4 sm:mt-0 flex flex-wrap gap-3">
            <a href="/customers" class="inline-flex items-center px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded-lg transition-colors duration-200 border border-slate-600">
                <i class="bi bi-arrow-left mr-2"></i> Kembali
            </a>
            <a href="/customers/<%= customer.id %>/edit" class="inline-flex items-center px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors duration-200 border border-slate-600">
                <i class="bi bi-pencil mr-2"></i> Edit
            </a>
            <a href="/customers/<%= customer.id %>/services/create" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200">
                <i class="bi bi-plus-circle mr-2"></i> Tambah Layanan
            </a>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Customer Info -->
    <div class="lg:col-span-1">
        <div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden mb-6">
            <div class="bg-slate-900/30 px-6 py-4 border-b border-slate-700">
                <h6 class="text-lg font-semibold text-white mb-0">Informasi Pelanggan</h6>
            </div>
            <div class="p-6">
                <div class="mb-4">
                    <p class="text-slate-400 text-sm mb-2">Status</p>
                    <div>
                        <% if (customer.status_aktif === 1) { %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-500/20 text-green-400 border border-green-500/30">Aktif</span>
                        <% } else if (customer.status_aktif === 2) { %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-500/20 text-yellow-400 border border-yellow-500/30">Ditangguhkan</span>
                        <% } else { %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-500/20 text-red-400 border border-red-500/30">Tidak Aktif</span>
                        <% } %>
                    </div>
                </div>
                <div class="mb-4">
                    <p class="text-slate-400 text-sm mb-2">Alamat</p>
                    <p class="text-slate-200"><%= customer.alamat || '-' %></p>
                </div>
                <div class="mb-4">
                    <p class="text-slate-400 text-sm mb-2">Catatan</p>
                    <p class="text-slate-200"><%= customer.catatan || '-' %></p>
                </div>
                <div>
                    <p class="text-slate-400 text-sm mb-2">Saldo</p>
                    <p class="text-2xl font-bold text-white">
                        Rp. <%= parseFloat(customer.saldo || 0).toLocaleString('id-ID') %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden">
            <div class="bg-slate-900/30 px-6 py-4 border-b border-slate-700">
                <h6 class="text-lg font-semibold text-white mb-0">Aksi Cepat</h6>
            </div>
            <div class="p-6 space-y-3">
                <button onclick="showAddBalanceModal()" class="w-full inline-flex items-center justify-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-200">
                    <i class="bi bi-plus-circle mr-2"></i> Tambah Saldo
                </button>
                <button onclick="showPaymentModal()" class="w-full inline-flex items-center justify-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200">
                    <i class="bi bi-credit-card mr-2"></i> Bayar
                </button>
                <button onclick="showNotificationModal()" class="w-full inline-flex items-center justify-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors duration-200">
                    <i class="bi bi-bell mr-2"></i> Kirim Notifikasi
                </button>
            </div>
        </div>
    </div>

    <!-- Services & History -->
    <div class="lg:col-span-2">
        <!-- Active Services -->
        <div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden mb-6">
            <div class="bg-slate-900/30 px-6 py-4 border-b border-slate-700 flex items-center justify-between">
                <h6 class="text-lg font-semibold text-white mb-0">Layanan Aktif</h6>
                <span class="text-sm text-slate-400"><%= subscriptions.length %> layanan</span>
            </div>
            <div class="p-6">
                <% if (subscriptions.length > 0) { %>
                    <div class="space-y-4">
                        <% subscriptions.forEach(sub => { %>
                            <div class="bg-slate-700/50 rounded-lg p-4 hover:bg-slate-700/70 transition-colors duration-200">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <h7 class="text-lg font-medium text-white mb-1"><%= sub.nama_layanan %></h7>
                                        <p class="text-slate-400 text-sm">
                                            <i class="bi bi-calendar mr-2"></i> <%= sub.tanggal_mulai %> - <%= sub.tanggal_akhir %>
                                        </p>
                                        <p class="text-slate-400 text-sm">
                                            <i class="bi bi-tag mr-2"></i> Rp. <%= parseFloat(sub.harga).toLocaleString('id-ID') %>/bulan
                                        </p>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <% if (sub.status === 'active') { %>
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-500/20 text-green-400 border border-green-500/30">Aktif</span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-500/20 text-red-400 border border-red-500/30">Non-aktif</span>
                                        <% } %>
                                        <a href="/subscriptions/<%= sub.id %>/renew" class="inline-flex items-center px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white text-sm rounded-lg transition-colors duration-200">
                                            <i class="bi bi-arrow-clockwise mr-1"></i> Perpanjang
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-8">
                        <i class="bi bi-inbox text-4xl text-slate-500 mb-3"></i>
                        <p class="text-slate-400">Tidak ada layanan aktif</p>
                        <a href="/customers/<%= customer.id %>/services/create" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200 mt-4">
                            <i class="bi bi-plus-circle mr-2"></i> Tambah Layanan
                        </a>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Payment History -->
        <div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden">
            <div class="bg-slate-900/30 px-6 py-4 border-b border-slate-700 flex items-center justify-between">
                <h6 class="text-lg font-semibold text-white mb-0">Riwayat Pembayaran</h6>
                <a href="/payments?customer=<%= customer.id %>" class="text-sm text-blue-400 hover:text-blue-300">Lihat semua</a>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-slate-900/30 border-b border-slate-700">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Tanggal</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Deskripsi</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Jumlah</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-700">
                        <% payments.slice(0, 5).forEach(payment => { %>
                            <tr class="hover:bg-slate-700/30 transition-colors duration-150">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">
                                    <%= new Date(payment.created_at).toLocaleDateString('id-ID') %>
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-300">
                                    <%= payment.deskripsi %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                                    Rp. <%= parseFloat(payment.jumlah).toLocaleString('id-ID') %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (payment.status === 'paid') { %>
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-500/20 text-green-400 border border-green-500/30">Lunas</span>
                                    <% } else if (payment.status === 'pending') { %>
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-500/20 text-yellow-400 border border-yellow-500/30">Menunggu</span>
                                    <% } else { %>
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-500/20 text-red-400 border border-red-500/30">Batal</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% if (payments.length === 0) { %>
                    <div class="text-center py-8">
                        <i class="bi bi-cash-stack text-4xl text-slate-500 mb-3"></i>
                        <p class="text-slate-400">Belum ada pembayaran</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Add Balance Modal -->
<div id="addBalanceModal" class="hidden fixed inset-0 bg-slate-900/80 backdrop-blur-sm flex items-center justify-center z-50">
    <div class="bg-slate-800 border border-slate-700 rounded-xl shadow-2xl max-w-md w-full mx-4">
        <div class="px-6 py-4 border-b border-slate-700">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-white">Tambah Saldo</h3>
                <button onclick="hideAddBalanceModal()" class="text-slate-400 hover:text-white transition-colors">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <form id="addBalanceForm" class="p-6">
            <div class="mb-4">
                <label class="block text-sm font-medium text-slate-300 mb-2">Jumlah</label>
                <input type="number" name="amount" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Masukkan jumlah">
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-slate-300 mb-2">Catatan</label>
                <textarea name="notes" rows="3" class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Opsional"></textarea>
            </div>
            <div class="flex gap-3">
                <button type="button" onclick="hideAddBalanceModal()" class="flex-1 px-4 py-2 bg-slate-600 hover:bg-slate-500 text-white rounded-lg transition-colors duration-200">
                    Batal
                </button>
                <button type="submit" class="flex-1 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-200">
                    Tambah
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function showAddBalanceModal() {
    document.getElementById('addBalanceModal').classList.remove('hidden');
    document.getElementById('addBalanceModal').classList.add('flex');
}

function hideAddBalanceModal() {
    document.getElementById('addBalanceModal').classList.add('hidden');
    document.getElementById('addBalanceModal').classList.remove('flex');
}

document.getElementById('addBalanceForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);

    try {
        const response = await fetch('/customers/<%= customer.id %>/balance/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                amount: formData.get('amount'),
                notes: formData.get('notes')
            })
        });

        const result = await response.json();

        if (result.success) {
            location.reload();
        } else {
            alert('Gagal menambah saldo: ' + result.message);
        }
    } catch (error) {
        alert('Terjadi kesalahan: ' + error.message);
    }
});
</script>

<%- include('../partials/footer') %>