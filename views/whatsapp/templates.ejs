<%- include('../partials/header', { title: 'WhatsApp Message Templates', currentUrl: '/whatsapp/message-templates-page' }) %>

<!-- Page Header -->
<div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">WhatsApp Message Templates</h1>
            <p class="text-slate-400">Kelola template pesan WhatsApp untuk notifikasi otomatis</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <button type="button" onclick="showCreateTemplateModal()" class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-200">
                <i class="fas fa-plus-circle mr-2"></i> Create Template
            </button>
        </div>
    </div>
</div>

<!-- WhatsApp Navigation -->
<div class="bg-slate-800 border border-slate-700 rounded-xl p-2 mb-8">
    <nav class="flex flex-wrap gap-2" aria-label="WhatsApp Navigation">
        <a href="/whatsapp/management" class="<%= currentUrl === '/whatsapp/management' ? 'bg-slate-700 text-white' : 'text-slate-400 hover:text-white hover:bg-slate-700' %> px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center">
            <i class="fas fa-home mr-2"></i> Dashboard
        </a>
        <a href="/whatsapp/scan" class="<%= currentUrl && currentUrl.includes('/scan') ? 'bg-slate-700 text-white' : 'text-slate-400 hover:text-white hover:bg-slate-700' %> px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center">
            <i class="fas fa-qrcode mr-2"></i> QR Scanner
        </a>
        <a href="/whatsapp/history" class="<%= currentUrl && currentUrl.includes('/history') ? 'bg-slate-700 text-white' : 'text-slate-400 hover:text-white hover:bg-slate-700' %> px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center">
            <i class="fas fa-comments mr-2"></i> Message History
        </a>
        <a href="/whatsapp/message-templates-page" class="<%= currentUrl && currentUrl.includes('/message-templates-page') ? 'bg-slate-700 text-white' : 'text-slate-400 hover:text-white hover:bg-slate-700' %> px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center">
            <i class="fas fa-file-alt mr-2"></i> Templates
        </a>
        <a href="/whatsapp/whatsapp-settings" class="<%= currentUrl && currentUrl.includes('/whatsapp-settings') ? 'bg-slate-700 text-white' : 'text-slate-400 hover:text-white hover:bg-slate-700' %> px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center">
            <i class="fas fa-cog mr-2"></i> Settings
        </a>
    </nav>
</div>

<!-- Templates Table -->
<div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden">
    <div class="p-6">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-slate-700">
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Category</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Message Content</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Variables</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody id="templatesTableBody" class="divide-y divide-slate-700">
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-slate-400">
                            <i class="fas fa-spinner fa-spin mr-2"></i>
                            Loading templates...
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create/Edit Template Modal -->
<div id="templateModal" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-slate-800 border border-slate-700 rounded-xl max-w-2xl w-full p-6 relative max-h-[90vh] overflow-y-auto">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-semibold text-white" id="modalTitle">Create New Template</h3>
                <button type="button" onclick="closeTemplateModal()" class="text-slate-400 hover:text-white transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <form id="templateForm">
                <div class="space-y-4">
                    <div>
                        <label for="templateName" class="block text-sm font-medium text-slate-300 mb-2">Template Name</label>
                        <input type="text" id="templateName" name="name" required
                               class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               placeholder="Enter template name">
                    </div>

                    <div>
                        <label for="templateCategory" class="block text-sm font-medium text-slate-300 mb-2">Category</label>
                        <select id="templateCategory" name="category" required
                                class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-slate-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="general">General</option>
                            <option value="notification">Notification</option>
                            <option value="reminder">Reminder</option>
                            <option value="marketing">Marketing</option>
                            <option value="support">Support</option>
                        </select>
                    </div>

                    <div>
                        <label for="templateContent" class="block text-sm font-medium text-slate-300 mb-2">Message Content</label>
                        <textarea id="templateContent" name="content" rows="5" required
                                  class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                  placeholder="Enter message content..."></textarea>
                        <p class="mt-1 text-xs text-slate-500">Use {variable_name} for dynamic content. Available: {customer_name}, {voucher_code}, {expiry_date}, {price}, etc.</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Quick Variables</label>
                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
                            <button type="button" onclick="insertVariable('{customer_name}')" class="px-2 py-1 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded text-xs transition-colors">
                                {customer_name}
                            </button>
                            <button type="button" onclick="insertVariable('{voucher_code}')" class="px-2 py-1 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded text-xs transition-colors">
                                {voucher_code}
                            </button>
                            <button type="button" onclick="insertVariable('{expiry_date}')" class="px-2 py-1 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded text-xs transition-colors">
                                {expiry_date}
                            </button>
                            <button type="button" onclick="insertVariable('{price}')" class="px-2 py-1 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded text-xs transition-colors">
                                {price}
                            </button>
                            <button type="button" onclick="insertVariable('{duration}')" class="px-2 py-1 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded text-xs transition-colors">
                                {duration}
                            </button>
                            <button type="button" onclick="insertVariable('{company_name}')" class="px-2 py-1 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded text-xs transition-colors">
                                {company_name}
                            </button>
                        </div>
                    </div>
                </div>
                <div class="flex justify-end space-x-3 mt-6">
                    <button type="button" onclick="closeTemplateModal()" class="px-4 py-2 bg-slate-600 hover:bg-slate-500 text-white rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
                        Save Template
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Template Modal -->
<div id="viewTemplateModal" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-slate-800 border border-slate-700 rounded-xl max-w-2xl w-full p-6 relative">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-semibold text-white">Template Details</h3>
                <button type="button" onclick="closeViewModal()" class="text-slate-400 hover:text-white transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div id="viewTemplateContent" class="space-y-4">
                <!-- Content will be dynamically inserted -->
            </div>
        </div>
    </div>
</div>

<script>
// Modal functions
function showCreateTemplateModal() {
    document.getElementById('modalTitle').textContent = 'Create New Template';
    document.getElementById('templateForm').reset();
    document.getElementById('templateModal').classList.remove('hidden');
}

function closeTemplateModal() {
    document.getElementById('templateModal').classList.add('hidden');
}

function closeViewModal() {
    document.getElementById('viewTemplateModal').classList.add('hidden');
}

// Insert variable into textarea
function insertVariable(variable) {
    const textarea = document.getElementById('templateContent');
    const start = textarea.selectionStart;
    const end = textarea.selectionEnd;
    const text = textarea.value;

    textarea.value = text.substring(0, start) + variable + text.substring(end);
    textarea.focus();
    textarea.setSelectionRange(start + variable.length, start + variable.length);
}

// Form submission
document.getElementById('templateForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const data = {
        name: formData.get('name'),
        category: formData.get('category'),
        content: formData.get('content')
    };

    const submitBtn = this.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Saving...';
    submitBtn.disabled = true;

    try {
        // Save template logic here
        console.log('Saving template:', data);

        // Simulate API call
        await new Promise(resolve => setTimeout(resolve, 1000));

        closeTemplateModal();
        // Refresh templates table
        loadTemplates();

        // Show success message
        showToast('Template saved successfully', 'success');
    } catch (error) {
        console.error('Error saving template:', error);
        showToast('Failed to save template', 'error');
    } finally {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    }
});

// Load templates
async function loadTemplates() {
    const tbody = document.getElementById('templatesTableBody');

    try {
        // Simulate loading templates
        const templates = [
            {
                id: 1,
                name: 'Welcome Message',
                category: 'general',
                content: 'Welcome {customer_name}! Your voucher {voucher_code} is ready.',
                status: 'active',
                usage_count: 45
            },
            {
                id: 2,
                name: 'Expiry Reminder',
                category: 'reminder',
                content: 'Your voucher expires on {expiry_date}. Renew now!',
                status: 'active',
                usage_count: 23
            }
        ];

        tbody.innerHTML = templates.map(template => `
            <tr class="hover:bg-slate-700/50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-white">${template.name}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-500/10 text-blue-400">
                        ${template.category}
                    </span>
                </td>
                <td class="px-6 py-4">
                    <div class="text-sm text-slate-300 max-w-xs truncate">${template.content}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-400">
                    Used ${template.usage_count} times
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-medium rounded-full ${template.status === 'active' ? 'bg-green-500/10 text-green-400' : 'bg-red-500/10 text-red-400'}">
                        ${template.status}
                    </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <button onclick="editTemplate(${template.id})" class="text-blue-400 hover:text-blue-300 mr-3">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button onclick="viewTemplate(${template.id})" class="text-green-400 hover:text-green-300 mr-3">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button onclick="deleteTemplate(${template.id})" class="text-red-400 hover:text-red-300">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        `).join('');

    } catch (error) {
        console.error('Error loading templates:', error);
        tbody.innerHTML = '<tr><td colspan="6" class="px-6 py-8 text-center text-red-400">Error loading templates</td></tr>';
    }
}

// Edit template
function editTemplate(id) {
    // Load template data and show modal
    console.log('Editing template:', id);
    showCreateTemplateModal();
    document.getElementById('modalTitle').textContent = 'Edit Template';
}

// View template
function viewTemplate(id) {
    // Load template data and show view modal
    console.log('Viewing template:', id);

    const content = document.getElementById('viewTemplateContent');
    content.innerHTML = `
        <div class="space-y-4">
            <div>
                <h4 class="text-sm font-medium text-slate-400">Name</h4>
                <p class="text-white">Welcome Message</p>
            </div>
            <div>
                <h4 class="text-sm font-medium text-slate-400">Category</h4>
                <p class="text-white">General</p>
            </div>
            <div>
                <h4 class="text-sm font-medium text-slate-400">Content</h4>
                <p class="text-white whitespace-pre-wrap">Welcome {customer_name}! Your voucher {voucher_code} is ready.</p>
            </div>
            <div>
                <h4 class="text-sm font-medium text-slate-400">Usage</h4>
                <p class="text-white">Used 45 times</p>
            </div>
        </div>
    `;

    document.getElementById('viewTemplateModal').classList.remove('hidden');
}

// Delete template
function deleteTemplate(id) {
    if (confirm('Are you sure you want to delete this template?')) {
        console.log('Deleting template:', id);
        // Delete logic here
        loadTemplates();
        showToast('Template deleted successfully', 'success');
    }
}

// Toast notification
function showToast(message, type = 'info') {
    const colors = {
        success: 'bg-green-500',
        error: 'bg-red-500',
        info: 'bg-blue-500'
    };

    const toast = document.createElement('div');
    toast.className = `fixed top-20 right-4 ${colors[type]} text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300 translate-x-full`;
    toast.textContent = message;

    document.body.appendChild(toast);

    setTimeout(() => {
        toast.classList.remove('translate-x-full');
    }, 100);

    setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
            document.body.removeChild(toast);
        }, 300);
    }, 3000);
}

// Load templates on page load
document.addEventListener('DOMContentLoaded', loadTemplates);
</script>

