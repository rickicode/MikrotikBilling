<%- include('../partials/header', { title: 'WhatsApp Management', currentUrl: '/whatsapp/management' }) %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">WhatsApp Multi-Session Management</h1>
                <p class="text-slate-400">Kelola multiple koneksi WhatsApp, kirim pesan, dan monitor aktivitas</p>
            </div>
            <div class="mt-4 sm:mt-0 flex space-x-3">
                <button onclick="showCreateSessionModal()" class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-200 font-medium">
                    <i class="fas fa-plus mr-2"></i>
                    New Session
                </button>
                <button onclick="refreshAllSessions()" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200 font-medium">
                    <i class="fas fa-sync-alt mr-2"></i>
                    Refresh All
                </button>
            </div>
        </div>
    </div>

    <!-- Sessions Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8" id="sessionsGrid">
        <!-- Sessions will be loaded here dynamically -->
    </div>

    <!-- Main Content Area -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column - Active Session Details -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Selected Session Card -->
            <div id="selectedSessionCard" class="bg-slate-800 rounded-xl border border-slate-700 shadow-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-700 flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-white flex items-center">
                        <i class="fab fa-whatsapp text-green-500 mr-3 text-xl"></i>
                        <span id="selectedSessionName">Select a Session</span>
                    </h2>
                    <div class="flex items-center gap-2">
                        <span id="selectedSessionStatus" class="px-3 py-1 bg-slate-700 text-slate-300 rounded-full text-sm font-medium">
                            <i class="fas fa-circle text-slate-500 mr-2 text-xs"></i>
                            No Session
                        </span>
                        <button id="sessionMenuBtn" onclick="toggleSessionMenu()" class="px-2 py-1 bg-slate-700 hover:bg-slate-600 text-white rounded text-sm">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                </div>

                <!-- Session Content -->
                <div id="sessionContent" class="p-6">
                    <!-- QR Code Display -->
                    <div id="qrCodeSection" class="hidden">
                        <div class="bg-slate-900 rounded-lg p-6 text-center">
                            <h3 class="text-lg font-medium text-slate-300 mb-4">Connect WhatsApp</h3>
                            <div class="inline-block p-4 bg-white rounded-lg mb-4">
                                <div id="qrCodeDisplay" class="w-64 h-64 flex items-center justify-center">
                                    <div class="text-slate-400 text-center">
                                        <i class="fas fa-qrcode text-6xl mb-2"></i>
                                        <p>QR Code will appear here</p>
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center justify-center gap-4 mb-4">
                                <p id="qrStatus" class="text-sm text-slate-400">Ready to connect</p>
                                <button id="refreshQRBtn" onclick="refreshSessionQR()" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors text-sm">
                                    <i class="fas fa-sync-alt mr-2"></i>Refresh QR
                                </button>
                            </div>
                            <div id="connectionInstructions" class="bg-blue-900/30 border border-blue-700/50 rounded-lg p-4 text-left max-w-md mx-auto">
                                <h4 class="text-sm font-semibold text-blue-400 mb-2">
                                    <i class="fas fa-info-circle mr-2"></i>How to connect:
                                </h4>
                                <ol class="text-xs text-slate-300 space-y-1">
                                    <li>1. Open WhatsApp on your phone</li>
                                    <li>2. Go to Settings > Linked Devices</li>
                                    <li>3. Tap "Link a device"</li>
                                    <li>4. Scan the QR code above</li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <!-- Connected Session Info -->
                    <div id="connectedInfoSection" class="hidden">
                        <div class="bg-gradient-to-r from-green-900/30 to-blue-900/30 rounded-lg p-6 text-center">
                            <div class="inline-flex items-center justify-center w-20 h-20 bg-green-500/20 rounded-full mb-4">
                                <i class="fas fa-check-circle text-green-500 text-4xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-green-400 mb-2">Connected Successfully</h3>
                            <p id="connectedPhone" class="text-white text-lg font-semibold mb-4">+62 812-3456-7890</p>
                            <div class="flex justify-center gap-4">
                                <button onclick="sendMessageFromSession()" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
                                    <i class="fas fa-paper-plane mr-2"></i>Send Message
                                </button>
                                <button onclick="disconnectSession()" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors">
                                    <i class="fas fa-unlink mr-2"></i>Disconnect
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- No Session Selected -->
                    <div id="noSessionSection" class="text-center py-12">
                        <i class="fas fa-mobile-alt text-6xl text-slate-600 mb-4"></i>
                        <h3 class="text-lg font-medium text-slate-400 mb-2">No Session Selected</h3>
                        <p class="text-slate-500 mb-4">Select a session from the cards above or create a new one</p>
                        <button onclick="showCreateSessionModal()" class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors font-medium">
                            <i class="fas fa-plus mr-2"></i>Create First Session
                        </button>
                    </div>
                </div>
            </div>

            <!-- Quick Statistics -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="bg-slate-800 rounded-xl border border-slate-700 p-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-slate-400 text-xs">Total Messages</p>
                            <p class="text-2xl font-bold text-white">0</p>
                        </div>
                        <div class="p-2 bg-blue-600/20 rounded-lg">
                            <i class="fas fa-comments text-blue-500"></i>
                        </div>
                    </div>
                </div>
                <div class="bg-slate-800 rounded-xl border border-slate-700 p-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-slate-400 text-xs">Active Sessions</p>
                            <p class="text-2xl font-bold text-white" id="activeSessionsCount">0</p>
                        </div>
                        <div class="p-2 bg-green-600/20 rounded-lg">
                            <i class="fas fa-link text-green-500"></i>
                        </div>
                    </div>
                </div>
                <div class="bg-slate-800 rounded-xl border border-slate-700 p-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-slate-400 text-xs">Failed Messages</p>
                            <p class="text-2xl font-bold text-white">0</p>
                        </div>
                        <div class="p-2 bg-red-600/20 rounded-lg">
                            <i class="fas fa-exclamation-triangle text-red-500"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Recent Messages & Activity -->
        <div class="space-y-6">
            <!-- Recent Messages -->
            <div class="bg-slate-800 rounded-xl border border-slate-700">
                <div class="px-6 py-4 border-b border-slate-700 flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-white">Recent Messages</h3>
                    <button onclick="viewAllMessages()" class="text-blue-400 hover:text-blue-300 text-sm">
                        View All
                    </button>
                </div>
                <div id="recentMessages" class="p-4 space-y-3 max-h-96 overflow-y-auto">
                    <div class="text-center text-slate-400 py-8">
                        <i class="fas fa-inbox text-3xl mb-2"></i>
                        <p class="text-sm">No messages yet</p>
                    </div>
                </div>
            </div>

            <!-- Queue Status -->
            <div class="bg-slate-800 rounded-xl border border-slate-700">
                <div class="px-6 py-4 border-b border-slate-700">
                    <h3 class="text-lg font-semibold text-white">Message Queue</h3>
                </div>
                <div class="p-4">
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <span class="text-slate-400 text-sm">Pending</span>
                            <span class="bg-yellow-600/20 text-yellow-400 px-2 py-1 rounded text-xs font-medium">0</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-slate-400 text-sm">Processing</span>
                            <span class="bg-blue-600/20 text-blue-400 px-2 py-1 rounded text-xs font-medium">0</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-slate-400 text-sm">Failed</span>
                            <span class="bg-red-600/20 text-red-400 px-2 py-1 rounded text-xs font-medium">0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Session Modal -->
<div id="createSessionModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-slate-800 rounded-xl p-6 w-full max-w-md mx-4">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-white">Create New WhatsApp Session</h3>
            <button onclick="closeCreateSessionModal()" class="text-slate-400 hover:text-white">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form id="createSessionForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-1">Session Name</label>
                <input type="text" id="sessionName" placeholder="e.g., Main Account, Support Team" required
                       class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-1">Session Type</label>
                <select id="sessionType" class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="personal">Personal</option>
                    <option value="business">Business</option>
                    <option value="support">Support</option>
                    <option value="notification">Notification</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-1">Phone Number (Optional)</label>
                <input type="tel" id="sessionPhone" placeholder="628123456789"
                       class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="flex items-center">
                <input type="checkbox" id="setDefault" class="mr-2">
                <label for="setDefault" class="text-slate-300">Set as default session</label>
            </div>
            <div class="flex justify-end space-x-3 pt-4">
                <button type="button" onclick="closeCreateSessionModal()" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors">
                    Cancel
                </button>
                <button type="button" onclick="createNewSession()" class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors">
                    <i class="fas fa-plus mr-2"></i>Create Session
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer', { scripts: ['/public/js/whatsapp-multi-session.js'] }) %>

<script>
    // Initialize multi-session WhatsApp management
    document.addEventListener('DOMContentLoaded', function() {
        initializeWhatsAppMultiSession();
    });
</script>