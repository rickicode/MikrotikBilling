<%- include('../partials/header', { title: 'Admin Dashboard', currentUrl: '/' }) %>

<!-- Dashboard Hero Section -->
<div class="mb-8" role="region" aria-labelledby="dashboard-heading">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 id="dashboard-heading" class="text-3xl font-bold text-white mb-2">Dashboard Admin</h1>
            <p class="text-slate-400">Selamat datang kembali, <span id="username-display"><%= admin?.username || 'Admin' %></span></p>
        </div>
        <div class="mt-4 sm:mt-0">
            <a href="/settings?tab=mikrotik" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200 shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" aria-label="Konfigurasi Mikrotik - Pengaturan sistem">
                <i class="fas fa-cog mr-2" aria-hidden="true"></i>
                Konfigurasi Mikrotik
            </a>
        </div>
    </div>
</div>

<!-- Statistics Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8" role="region" aria-labelledby="stats-heading">
    <h2 id="stats-heading" class="sr-only">Statistik Dashboard</h2>

    <!-- Total Pelanggan Card -->
    <article class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-blue-500/10 transition-all duration-300 transform hover:-translate-y-1" aria-labelledby="total-customers-heading">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 id="total-customers-heading" class="text-slate-400 text-sm font-medium mb-1">Total Pelanggan</h3>
                <p class="text-3xl font-bold text-white counter" data-target="<%= stats.totalCustomers || 0 %>" id="totalCustomers" aria-live="polite" aria-atomic="true">
                    <%= stats.totalCustomers || 0 %>
                </p>
            </div>
            <div class="flex-shrink-0" aria-hidden="true">
                <div class="w-14 h-14 bg-blue-500/10 rounded-xl flex items-center justify-center border border-blue-500/20">
                    <i class="fas fa-users text-blue-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-green-400 flex items-center font-medium">
                <i class="fas fa-arrow-up mr-1" aria-hidden="true"></i>
                <span id="customersGrowth" aria-live="polite">+12%</span>
            </span>
            <span class="text-slate-500 ml-2">dari bulan lalu</span>
        </div>
    </article>

    <!-- Langganan Aktif Card -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-green-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <p class="text-slate-400 text-sm font-medium mb-1">Langganan Aktif</p>
                <p class="text-3xl font-bold text-white counter" data-target="<%= stats.activeSubscriptions || 0 %>" id="activeSubscriptions">
                    <%= stats.activeSubscriptions || 0 %>
                </p>
            </div>
            <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-green-500/10 rounded-xl flex items-center justify-center border border-green-500/20">
                    <i class="fas fa-check-circle text-green-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-green-400 flex items-center font-medium">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="subscriptionsGrowth">+8%</span>
            </span>
            <span class="text-slate-500 ml-2">dari bulan lalu</span>
        </div>
    </div>

    <!-- Pendapatan Hari Ini Card -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-yellow-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <p class="text-slate-400 text-sm font-medium mb-1">Pendapatan Hari Ini</p>
                <p class="text-3xl font-bold text-white" id="todayRevenue">
                    Rp <%= Number(stats.todayRevenue || 0).toLocaleString('id-ID') %>
                </p>
            </div>
            <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-yellow-500/10 rounded-xl flex items-center justify-center border border-yellow-500/20">
                    <i class="fas fa-dollar-sign text-yellow-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-green-400 flex items-center font-medium">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="revenueGrowth">+23%</span>
            </span>
            <span class="text-slate-500 ml-2">dari kemarin</span>
        </div>
    </div>

    <!-- Pembayaran Pending Card -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-orange-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <p class="text-slate-400 text-sm font-medium mb-1">Pembayaran Pending</p>
                <p class="text-3xl font-bold text-white counter" data-target="<%= stats.pendingPayments || 0 %>" id="pendingPayments">
                    <%= stats.pendingPayments || 0 %>
                </p>
            </div>
            <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-orange-500/10 rounded-xl flex items-center justify-center border border-orange-500/20">
                    <i class="fas fa-clock text-orange-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-red-400 flex items-center font-medium">
                <i class="fas fa-arrow-down mr-1"></i>
                <span id="paymentsTrend">-5%</span>
            </span>
            <span class="text-slate-500 ml-2">dari kemarin</span>
        </div>
    </div>
</div>

<!-- Mikrotik Statistics Row -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8" role="region" aria-labelledby="mikrotik-stats-heading">
    <h2 id="mikrotik-stats-heading" class="sr-only">Statistik Mikrotik</h2>

    <!-- Hotspot Users Card -->
    <article class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-slate-400 text-sm font-medium mb-1">Pengguna Hotspot</h3>
                <p class="text-3xl font-bold text-white counter" data-target="<%= stats.hotspotUsers || 0 %>" id="hotspotUsers">
                    <%= stats.hotspotUsers || 0 %>
                </p>
            </div>
            <div class="flex-shrink-0" aria-hidden="true">
                <div class="w-14 h-14 bg-cyan-500/10 rounded-xl flex items-center justify-center border border-cyan-500/20">
                    <i class="fas fa-wifi text-cyan-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-slate-500">Voucher digunakan</span>
        </div>
    </article>

    <!-- PPPoE Users Card -->
    <article class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-purple-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-slate-400 text-sm font-medium mb-1">Pengguna PPPoE</h3>
                <p class="text-3xl font-bold text-white counter" data-target="<%= stats.pppoeUsers || 0 %>" id="pppoeUsers">
                    <%= stats.pppoeUsers || 0 %>
                </p>
            </div>
            <div class="flex-shrink-0" aria-hidden="true">
                <div class="w-14 h-14 bg-purple-500/10 rounded-xl flex items-center justify-center border border-purple-500/20">
                    <i class="fas fa-network-wired text-purple-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-slate-500">Langganan aktif</span>
        </div>
    </article>

    <!-- Total Vouchers Card -->
    <article class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-indigo-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-slate-400 text-sm font-medium mb-1">Total Voucher</h3>
                <p class="text-3xl font-bold text-white counter" data-target="<%= stats.totalVouchers || 0 %>" id="totalVouchers">
                    <%= stats.totalVouchers || 0 %>
                </p>
            </div>
            <div class="flex-shrink-0" aria-hidden="true">
                <div class="w-14 h-14 bg-indigo-500/10 rounded-xl flex items-center justify-center border border-indigo-500/20">
                    <i class="fas fa-ticket text-indigo-400 text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-slate-500">Tersedia: <%= Math.max(0, (stats.totalVouchers || 0) - (stats.usedVouchers || 0)) %></span>
        </div>
    </article>

    <!-- Mikrotik Connection Card -->
    <article class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-emerald-500/10 transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-slate-400 text-sm font-medium mb-1">Status Mikrotik</h3>
                <p class="text-lg font-semibold <%= stats.mikrotikConnected ? 'text-emerald-400' : 'text-red-400' %>" id="mikrotikStatus">
                    <%= stats.mikrotikConnected ? 'Terhubung' : 'Terputus' %>
                </p>
            </div>
            <div class="flex-shrink-0" aria-hidden="true">
                <div class="w-14 h-14 <%= stats.mikrotikConnected ? 'bg-emerald-500/10 border-emerald-500/20' : 'bg-red-500/10 border-red-500/20' %> rounded-xl flex items-center justify-center border">
                    <i class="fas <%= stats.mikrotikConnected ? 'fa-check text-emerald-400' : 'fa-times text-red-400' %> text-2xl"></i>
                </div>
            </div>
        </div>
        <div class="mt-4 flex items-center text-sm">
            <span class="text-slate-500">RouterOS API</span>
        </div>
    </article>
</div>

<!-- Charts and Recent Activities Section -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Revenue Chart -->
    <div class="lg:col-span-2 bg-slate-800 border border-slate-700 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-white">Grafik Pendapatan</h2>
            <select id="chartPeriod" class="bg-slate-700 border border-slate-600 text-slate-200 text-sm rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                <option value="7">7 Hari Terakhir</option>
                <option value="30">30 Hari Terakhir</option>
                <option value="90">3 Bulan Terakhir</option>
            </select>
        </div>
        <div class="chart-container bg-slate-900/50 rounded-lg p-4" style="height: 320px;">
            <canvas id="revenueChart"></canvas>
        </div>
        <div class="mt-4 flex items-center justify-between text-sm">
            <div class="flex items-center space-x-4">
                <div class="flex items-center">
                    <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
                    <span class="text-slate-400">Pendapatan</span>
                </div>
                <div class="flex items-center">
                    <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
                    <span class="text-slate-400">Target</span>
                </div>
            </div>
            <span class="text-slate-500">Diperbarui: <span id="lastUpdate">-</span></span>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 shadow-lg">
        <h2 class="text-xl font-semibold text-white mb-6">Aksi Cepat</h2>
        <div class="space-y-3">
            <a href="/vouchers/create" class="w-full inline-flex items-center justify-center px-4 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md">
                <i class="fas fa-plus mr-2"></i>
                Buat Voucher Baru
            </a>
            <a href="/customers/create" class="w-full inline-flex items-center justify-center px-4 py-3 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md">
                <i class="fas fa-user-plus mr-2"></i>
                Tambah Pelanggan
            </a>
            <a href="/pppoe/create" class="w-full inline-flex items-center justify-center px-4 py-3 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md">
                <i class="fas fa-network-wired mr-2"></i>
                Buat PPPoE
            </a>
            <a href="/payments" class="w-full inline-flex items-center justify-center px-4 py-3 bg-gradient-to-r from-yellow-600 to-yellow-700 hover:from-yellow-700 hover:to-yellow-800 text-white rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md">
                <i class="fas fa-credit-card mr-2"></i>
                Kelola Pembayaran
            </a>
        </div>

        <!-- System Status -->
        <div class="mt-6 p-4 bg-slate-900/50 rounded-lg border border-slate-600">
            <h3 class="text-sm font-medium text-slate-300 mb-3">Status Sistem</h3>
            <div class="space-y-2">
                <div class="flex items-center justify-between">
                    <span class="text-xs text-slate-400">Mikrotik Connection</span>
                    <span class="w-2 h-2 bg-green-400 rounded-full" id="mikrotikStatus"></span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-xs text-slate-400">Database</span>
                    <span class="w-2 h-2 bg-green-400 rounded-full" id="dbStatus"></span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-xs text-slate-400">WhatsApp Service</span>
                    <span class="w-2 h-2 bg-yellow-400 rounded-full" id="whatsappStatus"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities Table -->
<div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden shadow-lg">
    <div class="px-6 py-4 border-b border-slate-700 bg-slate-900/30">
        <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-white">Aktivitas Terkini</h2>
            <a href="/admin/logs" class="inline-flex items-center text-blue-400 hover:text-blue-300 text-sm font-medium transition-colors duration-200">
                Lihat Semua
                <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
    </div>
    <div class="overflow-x-auto">
        <% if (recentActivities && recentActivities.length > 0) { %>
            <table class="w-full">
                <thead class="bg-slate-900/50 border-b border-slate-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Admin</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Aksi</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Target</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Detail</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Waktu</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700">
                    <% recentActivities.slice(0, 10).forEach((activity, index) => { %>
                        <tr class="hover:bg-slate-700/50 transition-colors duration-150 <%= index % 2 === 0 ? '' : 'bg-slate-800/30' %>">
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-blue-500/10 rounded-full flex items-center justify-center mr-3">
                                        <i class="fas fa-user text-blue-400 text-xs"></i>
                                    </div>
                                    <span class="text-slate-200 font-medium"><%= activity.admin_name %></span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20">
                                    <%= activity.action %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-200">
                                <%= activity.target_type || '-' %>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-400 max-w-xs truncate">
                                <%= activity.details || '-' %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-400">
                                <div class="flex items-center">
                                    <i class="far fa-clock mr-2 text-slate-500"></i>
                                    <span><%= new Date(activity.created_at).toLocaleString('id-ID', {
                                        day: '2-digit',
                                        month: 'short',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %></span>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="p-12 text-center">
                <div class="w-16 h-16 bg-slate-700/50 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-inbox text-3xl text-slate-500"></i>
                                        </div>
                <p class="text-slate-400 font-medium">Belum ada aktivitas</p>
                <p class="text-slate-500 text-sm mt-1">Aktivitas sistem akan ditampilkan di sini</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Loading States (hidden by default) -->
<div id="loadingOverlay" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm flex items-center justify-center z-50 hidden">
    <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 flex items-center space-x-4 shadow-2xl">
        <div class="animate-spin rounded-full h-10 w-10 border-4 border-slate-600 border-t-blue-500"></div>
        <div>
            <span class="text-slate-200 font-medium">Memuat data...</span>
            <p class="text-slate-400 text-sm mt-1">Mohon tunggu sebentar</p>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div id="toastContainer" class="fixed top-4 right-4 z-50 space-y-2"></div>

<%- include('../partials/footer', { scripts: ['/public/js/admin-dashboard.js'] }) %>