<%- include('../partials/header', { title: 'Template Voucher', currentUrl: '/templates' }) %>

<div class="mb-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-800">Template Voucher</h1>
        <div class="flex gap-2">
            <button class="px-4 py-2 text-blue-600 border border-blue-300 rounded-md hover:bg-blue-50 transition-colors duration-200 flex items-center gap-2 text-sm" id="showExamplesBtn">
                <i class="bi bi-file-text"></i> Lihat Contoh
            </button>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-200 flex items-center gap-2 text-sm" id="saveTemplateBtnMain">
                <i class="bi bi-save"></i> Simpan Template
            </button>
        </div>
    </div>
</div>

<!-- Template Configuration -->
<div class="bg-white rounded-lg shadow-md border border-gray-200">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="templateTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="template-config-tab" data-bs-toggle="tab" data-bs-target="#template-config" type="button" role="tab">
                            <i class="bi bi-gear"></i> Konfigurasi Template
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="template-preview-tab" data-bs-toggle="tab" data-bs-target="#template-preview" type="button" role="tab">
                            <i class="bi bi-eye"></i> Preview
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="template-help-tab" data-bs-toggle="tab" data-bs-target="#template-help" type="button" role="tab">
                            <i class="bi bi-question-circle"></i> Panduan
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle"></i> <%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="tab-content" id="templateTabContent">
                    <!-- Template Configuration -->
                    <div class="tab-pane fade show active" id="template-config" role="tabpanel">
                        <form id="templateSettingsForm">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Jenis Template</label>
                                    <select class="form-select" id="templateType" name="template_type">
                                        <option value="a4" <%= settings?.template_type === 'a4' ? 'selected' : '' %>>A4 (Kertas Standar)</option>
                                        <option value="thermal" <%= settings?.template_type === 'thermal' ? 'selected' : '' %>>Thermal Printer (80mm)</option>
                                    </select>
                                    <div class="form-text">Pilih jenis template voucher</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Nama Template</label>
                                    <input type="text" class="form-control" id="templateName" name="template_name"
                                           value="<%= settings?.template_name || 'Default' %>"
                                           placeholder="Nama template">
                                    <div class="form-text">Nama untuk identifikasi template</div>
                                </div>
                                <div class="col-12">
                                    <hr class="my-2">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Template Default untuk Print</label>
                                    <select class="form-select" id="printTemplateType" name="print_template_type">
                                        <option value="a4" <%= settings?.print_template_type === 'a4' ? 'selected' : '' %>>A4 (Kertas Standar)</option>
                                        <option value="thermal" <%= settings?.print_template_type === 'thermal' ? 'selected' : '' %>>Thermal Printer (80mm)</option>
                                    </select>
                                    <div class="form-text">Template yang akan digunakan saat mencetak voucher</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Status Template Default</label>
                                    <div class="form-control-plaintext">
                                        <span class="badge bg-<%= settings?.print_template_type === 'thermal' ? 'success' : 'primary' %>">
                                            <%= settings?.print_template_type === 'thermal' ? 'Thermal' : 'A4' %>
                                        </span>
                                        <div class="form-text mt-1">Template yang aktif digunakan untuk print voucher</div>
                                    </div>
                                </div>
