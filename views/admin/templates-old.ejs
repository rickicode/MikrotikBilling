                                    <label class="form-label">Template HTML</label>
                                    <textarea class="form-control font-monospace" id="templateContent" name="template_content"
                                              rows="25" required><%= settings?.template_type === 'thermal' ? (settings?.template_thermal || '') : (settings?.template_a4 || '') %></textarea>
