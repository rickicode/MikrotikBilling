<%- include('../partials/header', { title: 'Notification Queue', currentUrl: '/notifications/queue' }) %>

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Notification Queue</h1>
            <div>
                <form method="POST" action="/notifications/process-queue" class="d-inline-block">
                    <button type="submit" class="btn btn-primary btn-sm me-2">
                        <i class="bi bi-play-circle"></i> Process Queue
                    </button>
                </form>
                <a href="/notifications/templates" class="btn btn-outline-secondary btn-sm me-2">
                    <i class="bi bi-file-text"></i> Templates
                </a>
                <a href="/notifications/statistics" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-graph-up"></i> Statistics
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card primary">
            <div class="stat-icon primary">
                <i class="bi bi-clock-history"></i>
            </div>
            <h3 class="mb-1"><%= stats?.pending || 0 %></h3>
            <p class="text-muted mb-0">Pending</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card success">
            <div class="stat-icon success">
                <i class="bi bi-check-circle"></i>
            </div>
            <h3 class="mb-1"><%= stats?.sent || 0 %></h3>
            <p class="text-muted mb-0">Sent</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card danger">
            <div class="stat-icon danger">
                <i class="bi bi-x-circle"></i>
            </div>
            <h3 class="mb-1"><%= stats?.failed || 0 %></h3>
            <p class="text-muted mb-0">Failed</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card warning">
            <div class="stat-icon warning">
                <i class="bi bi-arrow-repeat"></i>
            </div>
            <h3 class="mb-1"><%= stats?.retrying || 0 %></h3>
            <p class="text-muted mb-0">Retrying</p>
        </div>
    </div>
</div>

<!-- Controls -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-6">
                <form method="GET" class="d-flex gap-2">
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Status</option>
                        <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Pending</option>
                        <option value="sent" <%= status === 'sent' ? 'selected' : '' %>>Sent</option>
                        <option value="failed" <%= status === 'failed' ? 'selected' : '' %>>Failed</option>
                        <option value="retrying" <%= status === 'retrying' ? 'selected' : '' %>>Retrying</option>
                    </select>
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <form method="POST" action="/notifications/process-queue" class="d-inline-block">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-play-circle"></i> Process Queue
                    </button>
                </form>
                <a href="/notifications/templates" class="btn btn-outline-secondary">
                    <i class="bi bi-file-text"></i> Templates
                </a>
                <a href="/notifications/statistics" class="btn btn-outline-secondary">
                    <i class="bi bi-graph-up"></i> Statistics
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Notifications Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Recipient</th>
                        <th>Customer</th>
                        <th>Message Preview</th>
                        <th>Status</th>
                        <th>Attempts</th>
                        <th>Created</th>
                        <th>Sent</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% notifications.forEach(notification => { %>
                        <tr>
                            <td><%= notification.id %></td>
                            <td>
                                <span class="badge bg-<% if (notification.type === 'whatsapp') { %>success<% } else { %>info<% } %>">
                                    <%= notification.type %>
                                </span>
                            </td>
                            <td><%= notification.recipient %></td>
                            <td><%= notification.customer_name || '-' %></td>
                            <td>
                                <div class="text-truncate" style="max-width: 200px;" title="<%= notification.message %>">
                                    <%= notification.message %>
                                </div>
                            </td>
                            <td>
                                <% if (notification.status === 'pending') { %>
                                    <span class="badge bg-warning">Pending</span>
                                <% } else if (notification.status === 'sent') { %>
                                    <span class="badge bg-success">Sent</span>
                                <% } else if (notification.status === 'failed') { %>
                                    <span class="badge bg-danger">Failed</span>
                                <% } else if (notification.status === 'retrying') { %>
                                    <span class="badge bg-info">Retrying</span>
                                <% } %>
                            </td>
                            <td><%= notification.attempts || 0 %></td>
                            <td><%= new Date(notification.created_at).toLocaleString() %></td>
                            <td>
                                <% if (notification.sent_at) { %>
                                    <%= new Date(notification.sent_at).toLocaleString() %>
                                    <% if (notification.delay_minutes) { %>
                                        <br><small class="text-muted">(<%= (notification.delay_minutes || 0).toFixed(1) %> min)</small>
                                    <% } %>
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <% if (notification.status === 'failed') { %>
                                        <form method="POST" action="/notifications/retry/<%= notification.id %>" class="d-inline-block">
                                            <button type="submit" class="btn btn-sm btn-outline-primary" title="Retry">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                    <button type="button" class="btn btn-sm btn-outline-secondary view-notification-btn"
                                            data-notification-id="<%= notification.id %>" title="View">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger delete-notification-btn"
                                            data-notification-id="<%= notification.id %>" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }); %>

                    <% if (notifications.length === 0) { %>
                        <tr>
                            <td colspan="10" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No notifications found
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (pagination.total > 1) { %>
            <nav aria-label="Notification pagination">
                <ul class="pagination justify-content-center">
                    <% if (pagination.current > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.current - 1 %>&status=<%= status %>">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    <% } %>

                    <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                        <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&status=<%= status %>"><%= i %></a>
                        </li>
                    <% } %>

                    <% if (pagination.current < pagination.total) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.current + 1 %>&status=<%= status %>">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>
</div>

<!-- View Notification Modal -->
<div class="modal fade" id="viewNotificationModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notification Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="notificationDetails">
                    <!-- Details will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer', { scripts: ['/public/js/notifications-queue.js'] }) %>