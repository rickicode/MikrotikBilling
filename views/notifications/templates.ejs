<%- include('../partials/header', { title: 'Notification Templates', currentUrl: '/notifications/templates' }) %>

<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h1 class="h3 mb-0">
          <i class="bi bi-whatsapp"></i> WhatsApp Templates
        </h1>
        <p class="text-muted mb-0">Manage WhatsApp message templates</p>
      </div>
      <div>
        <button type="button" class="btn btn-primary" id="createTemplateBtn">
          <i class="bi bi-plus-circle"></i> Create Template
        </button>
        <a href="/notifications/queue" class="btn btn-outline-secondary">
          <i class="bi bi-list-ul"></i> Queue
        </a>
        <a href="/notifications/statistics" class="btn btn-outline-secondary">
          <i class="bi bi-graph-up"></i> Statistics
        </a>
      </div>
    </div>
  </div>
</div>

  <!-- Flash Messages -->
<% if (success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="bi bi-check-circle"></i> <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<% if (error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="bi bi-exclamation-triangle"></i> <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

  <!-- Templates Table -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Content Preview</th>
              <th>Usage Count</th>
              <th>Active</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% templates.forEach(template => { %>
              <tr>
                <td><strong><%= template.name %></strong></td>
                <td>
                  <span class="badge bg-primary">
                    <%= template.category || 'general' %>
                  </span>
                </td>
                <td>
                  <div class="text-truncate" style="max-width: 300px;" title="<%= template.content %>">
                    <%= template.content %>
                  </div>
                </td>
                <td><%= template.usage_count || 0 %></td>
                <td>
                  <% if (template.is_active) { %>
                    <span class="badge bg-success">Active</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% } %>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-primary edit-template-btn" data-template-id="<%= template.id %>" title="Edit">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary view-template-btn" data-template-id="<%= template.id %>" title="View">
                      <i class="bi bi-eye"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-warning test-template-btn" data-template-id="<%= template.id %>" title="Test">
                      <i class="bi bi-send"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }); %>

            <% if (templates.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">
                  <i class="bi bi-whatsapp fs-1 d-block mb-2"></i>
                  No WhatsApp templates found
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Create/Edit Template Modal -->
<div class="modal fade" id="templateModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="templateModalTitle">Create Template</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="templateForm" method="POST">
        <div class="modal-body">
          <input type="hidden" id="templateId" name="id">

          <div class="mb-3">
            <label for="templateName" class="form-label">Template Name *</label>
            <input type="text" class="form-control" id="templateName" name="name" required
                   placeholder="e.g., voucher_created, expiry_warning">
            <div class="form-text">Unique identifier for the WhatsApp template</div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="templateType" class="form-label">Category *</label>
                <select class="form-select" id="templateType" name="category" required>
                  <option value="general">General</option>
                  <option value="voucher">Voucher</option>
                  <option value="payment">Payment</option>
                  <option value="expiry">Expiry</option>
                  <option value="welcome">Welcome</option>
                  <option value="alert">Alert</option>
                </select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="templateActive" name="is_active" checked>
                  <label class="form-check-label" for="templateActive">
                    Active
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label for="templateMessage" class="form-label">WhatsApp Message *</label>
            <textarea class="form-control" id="templateMessage" name="content" rows="8" required
                      placeholder="WhatsApp message content with variables like {customer_name}, {voucher_code}, etc."></textarea>
            <div class="form-text">
              Available variables: {customer_name}, {customer_phone}, {voucher_code}, {expiry_date},
              {package_name}, {amount}, {days_remaining}, etc.
            </div>
          </div>

          <div class="mb-3">
            <label for="templateDescription" class="form-label">Description</label>
            <textarea class="form-control" id="templateDescription" name="description" rows="2"
                      placeholder="Brief description of when this WhatsApp template is used"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Template</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Test Template Modal -->
<div class="modal fade" id="testTemplateModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Test Template</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="testTemplateForm" method="POST" action="/whatsapp/test">
        <div class="modal-body">
          <input type="hidden" id="testTemplateId" name="template_id">

          <div class="mb-3">
            <label for="testMessage" class="form-label">Test Message</label>
            <textarea class="form-control" id="testMessage" name="test_message" rows="3"
                      placeholder="Custom test WhatsApp message (optional)"></textarea>
            <div class="form-text">Leave empty to use template with sample data</div>
          </div>

          <div class="mb-3">
            <label for="testRecipient" class="form-label">WhatsApp Number</label>
            <input type="text" class="form-control" id="testRecipient" name="test_recipient"
                   placeholder="628123456789">
            <div class="form-text">Phone number for testing WhatsApp message</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Send Test</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer', { scripts: ['/public/js/notifications-templates.js'] }) %>