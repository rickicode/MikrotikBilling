{
  "name": "Mikrotik Billing System",
  "short_name": "MikrotikBill",
  "description": "Sistem billing Mikrotik untuk manajemen voucher hotspot dan user PPPoE",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#0f172a",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "id-ID",
  "dir": "ltr",
  "categories": ["business", "productivity", "utilities"],
  "icons": [
    {
      "src": "/public/images/icons/icon-16x16.svg",
      "sizes": "16x16",
      "type": "image/svg+xml"
    },
    {
      "src": "/public/images/icons/icon-32x32.svg",
      "sizes": "32x32",
      "type": "image/svg+xml"
    },
    {
      "src": "/public/images/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/public/images/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Lihat dashboard dan statistik",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/public/images/icons/dashboard-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Voucher",
      "short_name": "Voucher",
      "description": "Buat voucher hotspot baru",
      "url": "/vouchers/create",
      "icons": [
        {
          "src": "/public/images/icons/voucher-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Pelanggan",
      "short_name": "Pelanggan",
      "description": "Kelola data pelanggan",
      "url": "/customers",
      "icons": [
        {
          "src": "/public/images/icons/customers-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+mikrotikbill",
      "url": "/handle-protocol?type=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import-vouchers",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share-data",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "voucher_file",
          "accept": ["text/csv", "application/vnd.ms-excel"]
        }
      ]
    }
  }
}