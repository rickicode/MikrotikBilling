      "config_path": "tests/performance/load-config.yml",
      "scenarios": [
        "voucher_generation_load",
        "payment_processing_load",
        "user_authentication_load"
      ]
    },
    "benchmarking": {
      "tool": "clinic.js",
      "metrics": [
