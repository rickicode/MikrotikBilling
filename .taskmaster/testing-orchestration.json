  "qualityGates": {
    "pre_commit": {
      "enabled": true,
      "tests": ["lint", "unit:fast"],
      "coverage_required": false,
      "timeout": "2 minutes"
    },
    "pre_push": {
      "enabled": true,
      "tests": ["unit", "integration:essential"],
      "coverage_required": 75,
      "timeout": "5 minutes"
    },
    "pull_request": {
      "enabled": true,
      "tests": ["unit", "integration", "e2e:critical"],
      "coverage_required": 80,
      "timeout": "15 minutes"
    },
    "deployment": {
      "enabled": true,
      "tests": ["unit", "integration", "e2e", "security", "performance"],
      "coverage_required": 85,
      "timeout": "30 minutes"
    }
  },
  "mocking_and_fixtures": {
    "strategies": {
      "external_services": {
        "mikrotik_api": {
          "mock_library": "jest-mock",
          "fixture_path": "fixtures/mikrotik-responses.json",
          "scenarios": ["success", "timeout", "error", "connection_lost"]
        },
        "payment_gateways": {
          "mock_library": "nock",
          "fixture_path": "fixtures/payment-responses.json",
          "gateways": ["duitku", "manual", "bank_transfer"]
        },
        "whatsapp_web": {
          "mock_library": "jest-mock",
          "fixture_path": "fixtures/whatsapp-responses.json",
          "scenarios": ["connected", "disconnected", "message_sent", "rate_limited"]
        }
      },
      "database": {
        "strategy": "test_database",
        "reset_method": "migration_rollback",
        "seed_data": "fixtures/seed-data.sql"
      }
    }
  },
