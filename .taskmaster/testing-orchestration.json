{
  "version": "0.24.0",
  "createdAt": "2025-10-19T10:00:00.000Z",
  "project": "HIJINETWORK Mikrotik Billing System",
  "testingFramework": {
    "unit": {
      "framework": "jest",
      "configPath": "jest.config.js",
      "testMatch": [
        "<rootDir>/src/test/unit/**/*.test.js",
        "<rootDir>/src/test/**/*.test.js"
      ],
      "coverageThreshold": 80,
      "enforced": true
    },
    "integration": {
      "framework": "jest",
      "configPath": "jest.integration.config.js",
      "testMatch": [
        "<rootDir>/src/test/integration/**/*.test.js"
      ],
      "coverageThreshold": 75,
      "enforced": true
    },
    "e2e": {
      "framework": "playwright",
      "configPath": "playwright.config.js",
      "testMatch": [
        "<rootDir>/tests/**/*.spec.js"
      ],
      "browsers": ["chromium", "firefox", "webkit"],
      "parallel": true,
      "headless": true
    }
  },
  "orchestration": {
    "coordinator": "@test-automation-expert",
    "strategies": {
      "parallel_execution": {
        "enabled": true,
        "max_workers": "cpu_count",
        "unit_tests_parallel": true,
        "integration_tests_sequential": true,
        "e2e_tests_browser_parallel": true
      },
      "test_prioritization": {
        "enabled": true,
        "priority_order": [
          "critical_path_tests",
          "security_tests",
          "api_tests",
          "ui_tests",
          "performance_tests"
        ]
      },
      "smart_retries": {
        "enabled": true,
        "max_retries": 3,
        "retry_conditions": [
          "network_timeout",
          "flaky_ui_test",
          "external_service_unavailable"
        ]
      },
      "test_scheduling": {
        "enabled": true,
        "pre_commit_tests": ["lint", "unit:fast"],
        "pre_push_tests": ["unit", "integration:essential"],
        "ci_pipeline_tests": ["unit", "integration", "e2e"],
        "nightly_tests": ["performance", "load", "security"]
      }
    }
  },
