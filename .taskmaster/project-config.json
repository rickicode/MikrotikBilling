{
  "project": {
    "name": "MikrotikBilling",
    "type": "enterprise-system",
    "complexity": 8,
    "domain": "telecom-billing",
    "tech_stack": {
      "backend": "nodejs-fastify",
      "database": "postgresql",
      "frontend": "bootstrap-htmx",
      "integrations": ["mikrotik-api", "whatsapp-web", "payment-gateways"]
    }
  },
  "workflows": {
    "payment-plugin-development": {
      "agents": ["@payment-systems-expert", "@plugin-developer", "@api-architect"],
      "required_reviews": 2,
      "testing_required": true
    },
    "mikrotik-integration": {
      "agents": ["@network-engineer", "@api-architect", "@performance-optimizer"],
      "required_reviews": 2,
      "integration_testing": true
    },
    "whatsapp-notification-system": {
      "agents": ["@messaging-specialist", "@plugin-developer", "@testing-coordinator"],
      "required_reviews": 2,
      "e2e_testing": true
    },
    "database-migration": {
      "agents": ["@database-admin", "@software-engineering-expert"],
      "required_reviews": 2,
      "rollback_required": true
    },
    "frontend-optimization": {
      "agents": ["@frontend-optimization-expert", "@code-reviewer"],
      "required_reviews": 1,
      "accessibility_testing": true
    }
  },
  "agent_specializations": {
    "backend": ["@nodejs-expert", "@software-engineering-expert", "@api-architect"],
    "database": ["@database-admin", "@performance-optimizer"],
    "payments": ["@payment-systems-expert", "@plugin-developer"],
    "messaging": ["@messaging-specialist", "@network-engineer"],
    "frontend": ["@frontend-optimization-expert", "@code-reviewer"],
    "testing": ["@test-automation-expert", "@testing-coordinator"],
    "devops": ["@devops-engineer", "@deployment-specialist"]
  },
  "commit_standards": {
    "format": "type(scope): description - @agent1 @agent2",
    "mandatory_attribution": true,
    "footer_required": true,
    "scope_validation": true
  },
  "quality_gates": {
    "code_review_required": true,
    "specialist_approval_required": true,
    "testing_coverage_minimum": 80,
    "security_scan_required": true,
    "performance_testing": true
  }
}
